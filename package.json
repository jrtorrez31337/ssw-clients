{
  "name": "ssw-clients",
  "version": "1.0.0",
  "private": true,
  "description": "SSW Galaxy MMO - Unified client monorepo (web + mobile)",
  "scripts": {
    "install:all": "pnpm install",
    "start": "./tooling/scripts/start-all.sh",
    "stop": "./tooling/scripts/stop-all.sh",
    "status": "./tooling/scripts/status.sh",
    "start:web": "./tooling/scripts/start-web.sh",
    "stop:web": "./tooling/scripts/stop-web.sh",
    "start:mobile": "./tooling/scripts/start-mobile.sh",
    "stop:mobile": "./tooling/scripts/stop-mobile.sh",
    "web:dev": "pnpm --filter @ssw/web dev",
    "web:build": "pnpm --filter @ssw/web build",
    "web:preview": "pnpm --filter @ssw/web preview",
    "mobile:start": "pnpm --filter @ssw/mobile start",
    "mobile:start-web": "pnpm --filter @ssw/mobile start-web",
    "mobile:ios": "pnpm --filter @ssw/mobile ios",
    "mobile:android": "pnpm --filter @ssw/mobile android",
    "typecheck": "pnpm --recursive typecheck",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test",
    "check:drift": "./tooling/scripts/check-drift.sh",
    "check:capabilities": "cd packages/flags && node src/check-capabilities.js",
    "ci": "pnpm typecheck && pnpm check:drift && pnpm check:capabilities",
    "clean": "pnpm --recursive clean && rm -rf node_modules logs .pids"
  },
  "keywords": [
    "monorepo",
    "react",
    "react-native",
    "expo",
    "vite",
    "game",
    "mmo"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
